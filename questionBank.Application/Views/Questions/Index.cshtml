@model IEnumerable<questionBank.Application.Models.Question>

@{
    ViewData["Title"] = "Questions";
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Uddipok)
            </th>
            <th>
                Questions <a asp-action="Create" class="btn btn-sm btn-info"><i class="fa fa-add"></i></a>
            </th>
          
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class=" shadow">
            <td style="max-width:700px;min-width:560px">
                <span class="alert-secondary">@item.Chapter.AcademicSubject.AcademicClass.ClassName; Subject:General Science; Chapter: @item.Chapter.ChapterNumber (@item.Chapter.ChapterName)</span>
                <p style="text-align:justify">
                    @item.Uddipok
                </p>
            </td>
            <td>
                @{ 
                    int qSl = 1;
                }
                @foreach (var ques in item.QuestionDetails)
                {
                    <span class="fw-bold">@(qSl++ +")") @ques.QuestionText</span><br />
                    
                }
                <div class="btn-group btn-group-sm">
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                    <a class="btn btn-sm btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            </td>

        </tr>
}
    </tbody>
</table>
