@model MadeQuestionVM

@{
    int sl = 1;

}

<div class="row">
    <div class="col-md-10 offset-1">
        <div class="text-center">
            <div class="row"><h5>@Model.InstituteName</h5></div>
            <div class="row"><h6>@Model.ExamTypeName</h6></div>            
            
        </div>
    </div>
</div>
<hr />
@if (Model.Questions.Count > 0)
{
    foreach (var question in Model.Questions)
    {
        <div class="row">
            <div class="col-11">
                <div class="row">
                    <div class="col-1 text-end">
                        @(sl++).
                    </div>
                    <div class="col-11">
                        <p style="text-align:justify"> @question.Uddipok</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row pb-2">
            <div class="col-11">
                <div class="row">
                    <div class="offset-1 col-11">
                        <ul class="list-group list-group-flush">
                            @{int qMark = 1; char a = 'a';}
                            @foreach (var qDetails in question.QuestionDetails)
                            {

                                <li class="list-group-item">@(a++)) @qDetails.QuestionText  @(qMark++)</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }

}