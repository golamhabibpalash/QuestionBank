@using questionBank.Application.ViewModel

@model MakeQuestionVM

<div class="row pt-2">
    <div class="offset-md-3 col-md-6">
        <h4 class="text-center">Name of the School</h4>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-6">
        <h5 class="text-md-end col-form-label">Exam Type</h5>
    </div>
    <div class="col-md-2 text-md-start">
        <select class="form-control">
            <option value="1">Exam Type 1</option>
            <option value="2">Exam Type 2</option>
            <option value="3">Exam Type 3</option>
        </select>
    </div>
</div>
<hr />
<form asp-action="MakeQuestion" asp-controller="Questions" method="post">
    <div class="row">
        <div class="col-md-3">
            <div class="input-group">
                <span class="input-group-text">Academic Class</span>
                <select asp-for="AcademicClassId" class="form-control" asp-items="ViewBag.AcademicClassId"></select>
            </div>
        </div>
        <div class="col-md-3">
            <div class="input-group">
                <span class="input-group-text">Academic Subjects</span>
                <select asp-for="AcademicSubjecId" class="form-control">
                    <option selected disabled>Select Class First</option>
                </select>
            </div>
        </div>
        <div class="col-md-3">
            <div class="input-group">
                <span class="input-group-text">Chapter</span>
                <select asp-for="ChapterId" class="form-control">
                    <option value="1">Select Subject First</option>
                </select>
            </div>
        </div>
        <div class="col-md-3">
            <div class="input-group">
                <span class="input-group-text">Marks</span>
                <select class="form-control" asp-for="Marks">
                    <option value="10">10</option>
                    <option value="20">20</option>
                    <option value="30">30</option>
                    <option value="40">40</option>
                    <option value="50">50</option>
                    <option value="60">60</option>
                    <option value="70">70</option>
                    <option value="80">80</option>
                    <option value="90">90</option>
                    <option value="100">100</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="offset-md-5 col-md-2">
            <button type="submit" class="btn btn-info">Make Question</button>
        </div>
    </div>
</form>